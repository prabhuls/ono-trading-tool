# Application
NEXT_PUBLIC_APP_NAME=Trading Tools
NEXT_PUBLIC_ENVIRONMENT=development

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:8000

# Sentry Error Monitoring (Frontend)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/your-frontend-project-id

# Sentry (Build time - for source maps)
SENTRY_DSN=https://your-key@sentry.io/your-frontend-project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=your-frontend-project
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_RELEASE=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=true

# Other API Keys (if needed client-side)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=