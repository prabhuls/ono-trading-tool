# Railway Production Environment Variables - Frontend
# Copy these to Railway's environment variables section

# API Configuration (update with your Railway backend URL)
NEXT_PUBLIC_API_URL=https://your-backend.railway.app
NEXT_PUBLIC_WS_URL=wss://your-backend.railway.app

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true

# Sentry Error Monitoring (optional but recommended)
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN_FRONTEND}
SENTRY_ENVIRONMENT=production
SENTRY_AUTH_TOKEN=${SENTRY_AUTH_TOKEN}  # For source map uploads

# Analytics (optional)
NEXT_PUBLIC_GA_ID=${GA_MEASUREMENT_ID}  # Google Analytics
NEXT_PUBLIC_POSTHOG_KEY=${POSTHOG_API_KEY}  # PostHog Analytics

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKETS=false
NEXT_PUBLIC_ENABLE_TRADING=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=false

# Performance
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Build Configuration
STANDALONE=true  # For optimized Docker builds

# Port (Railway sets this automatically)
PORT=${PORT}

# Security Headers (optional)
NEXT_PUBLIC_CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"