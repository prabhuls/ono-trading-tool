# Environment
ENVIRONMENT=development
DEBUG=True

# Authentication
ENABLE_AUTH=false  # Set to true to require authentication for API endpoints

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Optional Components
# Set these to false to disable database and/or caching functionality
ENABLE_DATABASE=true
ENABLE_CACHING=true

# Database (required if ENABLE_DATABASE=true)
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_tools

# Redis (required if ENABLE_CACHING=true)
REDIS_URL=redis://localhost:6379

# External APIs
POLYGON_API_KEY=your-polygon-api-key
POLYGON_BASE_URL=https://api.polygon.io

# Add more external API keys as needed
# ALPACA_API_KEY=your-alpaca-api-key
# BINANCE_API_KEY=your-binance-api-key

# Sentry Error Monitoring & Performance Tracking
# Note: Backend includes full Sentry integration with performance monitoring
# SENTRY_DSN=https://your-key@sentry.io/your-backend-project-id
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.1  # Set to 0 to disable performance monitoring
# SENTRY_PROFILES_SAMPLE_RATE=0.1  # Set to 0 to disable profiling

# API Configuration (optional overrides)
# API_RATE_LIMIT_REQUESTS=100
# API_RATE_LIMIT_PERIOD=60
# API_DEFAULT_PAGE_SIZE=50
# API_MAX_PAGE_SIZE=100

# Feature Flags (optional)
# FEATURE_ENABLE_WEBSOCKETS=true
# FEATURE_ENABLE_RATE_LIMITING=true

# CORS (for production)
# ALLOWED_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
