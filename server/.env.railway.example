# Railway Production Environment Variables - Backend
# Copy this file to Railway's environment variables section

# Environment
ENVIRONMENT=production
DEBUG=False

# Authentication
ENABLE_AUTH=true  # Enable authentication for production

# Security
SECRET_KEY=${RAILWAY_SECRET_KEY}  # Generate with: openssl rand -hex 32

# Frontend URL (update with your Railway frontend URL)
FRONTEND_URL=https://your-frontend.railway.app
ALLOWED_ORIGINS=["https://your-frontend.railway.app"]

# Database (Railway provides DATABASE_URL automatically)
DATABASE_URL=${DATABASE_URL}
ENABLE_DATABASE=true

# Redis (Add Redis plugin in Railway)
REDIS_URL=${REDIS_URL}
ENABLE_CACHING=true

